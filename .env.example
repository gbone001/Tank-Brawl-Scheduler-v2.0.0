# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (Required)
DISCORD_BOT_TOKEN=your_bot_token_here

# Bot Configuration (Optional)
BOT_PREFIX=!
BOT_DESCRIPTION=Tank Brawl Scheduler - Hell Let Loose Event Management Bot

# Database Configuration (Optional)
DATABASE_PATH=data/tank_brawl.db

# Feature Flags (Optional)
ENABLE_RECRUITMENT_SYSTEM=1
ENABLE_PERSISTENT_CREWS=1
ENABLE_AUTO_REMINDERS=1

# Event Configuration (Optional)
MAX_CREWS_PER_TEAM=6
DEFAULT_EVENT_DURATION_HOURS=2
REMINDER_TIMES=60,30,10

# Optional: Bot Configuration
LOG_LEVEL=INFO
BOT_PREFIX=!

# Optional: Development Settings
# ENVIRONMENT=development
